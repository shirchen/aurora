<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.aurora.scheduler.storage.db.ReservedTasksMapper">
    <!--<insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="result.id">-->
    <insert id="insert">
        INSERT INTO reserved_tasks (
        task_id
        ) VALUES (
        #{taskId},
        )
    </insert>

    <select id="selectAll" resultType="String">
        SELECT task_id from reserved_tasks
    </select>

    <delete id="delete">
        DELETE FROM reserved_tasks
        WHERE task_id = #{taskId}
    </delete>

    <delete id="truncate">
        DELETE FROM reserved_tasks
    </delete>
</mapper>
